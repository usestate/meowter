{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "esnext",
    "target": "esnext",
    "jsx": "preserve",
    "allowJs": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "allowSyntheticDefaultImports": true,
    "lib": ["webworker", "DOM"],
    "paths": {
      "constants/*": ["constants/*"],
      "assets/*": ["assets/*"],
      "features/*": ["components/*"],
      "core/*": ["core/*"],
      "lib/*": ["lib/*"],
      "screens/*": ["screens/*"],
      "locales/*": ["locales/*"],
      "ui/*": ["ui/*"],
      "types/*": ["types/*"],
      "utils/*": ["utils/*"]
    },
    "typeRoots": ["./types", "./node_modules/@types"]
  }
}
